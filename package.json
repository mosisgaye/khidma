{
  "name": "khidma-backend",
  "version": "1.0.0",
  "description": "API Backend pour Khidma Service - Plateforme de transport routier au Sénégal",
  "main": "dist/app.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "tsx src/app.ts",
    "dev:node": "ts-node src/app.ts",
    "dev:watch": "tsx watch src/app.ts",
    "build": "rimraf dist && tsc",
    "start": "node dist/app.js",
    "start:prod": "NODE_ENV=production node dist/app.js",
    
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset --force",
    
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    
    "docker:build": "docker build -t khidma-backend .",
    "docker:run": "docker run -p 3000:3000 khidma-backend",
    "docker:dev": "docker compose -f docker-compose.dev.yml up -d",
    "docker:dev:legacy": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:prod": "docker compose -f docker-compose.prod.yml up -d",
    "docker:stop": "docker compose down",
    "docker:stop:legacy": "docker-compose down",
    "docker:logs": "docker compose -f docker-compose.dev.yml logs",
    "docker:logs:postgres": "docker compose -f docker-compose.dev.yml logs postgres",
    
    "clean": "rimraf dist node_modules",
    "prepare": "husky install",
    "precommit": "npm run lint && npm run format:check && npm run test:ci"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.8.2",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.6.1",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "geolib": "^3.3.4",
    "helmet": "^8.1.0",
    "ioredis": "^5.6.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.14",
    "prisma": "^6.8.2",
    "puppeteer": "^23.9.0",
    "redis": "^5.1.0",
    "twilio": "^5.3.4",
    "validator": "^13.12.0",
    "winston": "^3.17.0",
    "zod": "^3.25.28"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.0",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.15.21",
    "@types/nodemailer": "^6.4.17",
    "@types/supertest": "^6.0.3",
    "@types/validator": "^13.12.2",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3"
  },
  "keywords": [
    "transport",
    "logistics",
    "senegal",
    "api",
    "nodejs",
    "typescript",
    "prisma",
    "postgresql"
  ],
  "author": {
    "name": "Khidma Service Team",
    "email": "dev@khidmaservice.com",
    "url": "https://khidmaservice.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/khidma/backend.git"
  },
  "bugs": {
    "url": "https://github.com/khidma/backend/issues"
  },
  "homepage": "https://khidmaservice.com"
}